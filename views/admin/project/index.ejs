<!DOCTYPE html>

<html lang="nl-NL">
    <head>
        <meta charset="utf-8">
        <title>Manage projects | Dashboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/static/css/main.css">
    </head>

    <body>
        <div class="header">
            <h1 class="title">Dashboard</h1>

            <div class="navigation">
                <ul class="list">
                    <li><a href="/"><img src="/static/resources/nav/dashboard.png"></a></li>
                    <li><a href="/account"><img src="/static/resources/nav/account.png"></a></li>
                    <% if(account.admin > 0){ %>
                        <li><a href="/admin"><img src="/static/resources/nav/admin.png"></a></li>
                    <% } %>
                    <li><a href="/logout"><img src="/static/resources/nav/logout.png"></a></li>
                </ul>
            </div>
        </div>

        <div class="content">
            <h2 class="title">Project List</h2>

            <div class="message">
                <% if(msg.content !== ""){ %>
                    <p style=<%= `color:${msg.color};` %>><%= msg.content %></p>
                <% } %>
            </div>

            <div class="back" onclick="window.location.assign('/admin')">
                <p><- Back</p>
            </div>
    
            <table class="users adminList">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Active</th>
                    <th>Status</th>
                </tr>
                <% for(var i in projects){ %>
                    <% var project = projects[i] %>
                    <tr class="user tableRow" onclick=<%= `window.location.assign('/admin/projects/${project.id}')`  %>>
                        <td class="user-id"><%= project.id %></td>
                        <td class="user-email"><%= project.name %></td>
                        <td class="user-username"><%= project.owner.username %></td>
                        <td class="user-admin"><%= project.active == 0 ? "no" : "yes" %></td>
                        <td class="user-admin"><%= project.status %></td>
                    </tr>
                <% } %>
            </table>
        </div>

        

    </body>
</html>

