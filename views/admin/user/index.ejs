<!DOCTYPE html>

<html lang="nl-NL">
    <head>
        <meta charset="utf-8">
        <title>User management | Dashboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/static/css/main.css">
    </head>

    <body>
        <div class="header">
            <h1 class="title">Dashboard</h1>

            <div class="navigation">
                <ul class="list">
                    <li><a href="/"><img src="/static/resources/nav/dashboard.png"></a></li>
                    <li><a href="/account"><img src="/static/resources/nav/account.png"></a></li>
                    <% if(account.admin > 0){ %>
                        <li><a href="/admin"><img src="/static/resources/nav/admin.png"></a></li>
                    <% } %>
                    <li><a href="/logout"><img src="/static/resources/nav/logout.png"></a></li>
                </ul>
            </div>
        </div>

        <div class="content">
            <h2 class="title">User List</h2>

            <div class="message">
                <% if(msg.content !== ""){ %>
                    <p style=<%= `color:${msg.color};` %>><%= msg.content %></p>
                <% } %>
            </div>

            <div class="back" onclick="window.location.assign('/admin')">
                <p><- Back</p>
            </div>
    
            <table class="users adminList">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Admin</th>
                </tr>
                <% for(var i=0;i<accounts.length;i++){ %>
                    <% var userAcc = accounts[i] %>
                    <tr class="user tableRow" onclick=<%= `window.location.assign('/admin/users/${userAcc.id}')`  %>>
                        <td class="user-id"><%= userAcc.id %></td>
                        <td class="user-email"><%= userAcc.email %></td>
                        <td class="user-username"><%= userAcc.username %></td>
                        <td class="user-admin"><%= userAcc.admin == 0 ? "no" : userAcc.admin %></td>
                    </tr>
                <% } %>
            </table>
        </div>

        <div class="footer">
        </div>
    </body>
</html>

